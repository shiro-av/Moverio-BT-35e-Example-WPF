<Controls:MetroWindow
    x:Class="SampleBrightnessControl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SampleBrightnessControl"
    Width="465"
    Height="260"
    Closing="MetroWindow_Closing"
    Loaded="MetroWindow_Loaded"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="TextStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="FontSize" Value="20" />
            </Style>
            <Style
                x:Key="BrightnessTextStyle"
                BasedOn="{StaticResource TextStyle}"
                TargetType="TextBlock">
                <Setter Property="Margin" Value="2,2,20,2" />
                <Setter Property="Width" Value="60" />
                <Setter Property="TextAlignment" Value="Center" />
            </Style>
            <Style
                x:Key="GetButton"
                BasedOn="{StaticResource MetroButton}"
                TargetType="Button">
                <Setter Property="Width" Value="60" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="IsEnabled" Value="False" />
            </Style>
            <Style
                x:Key="SetButton"
                BasedOn="{StaticResource MetroButton}"
                TargetType="Button">
                <Setter Property="Width" Value="40" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="IsEnabled" Value="False" />
            </Style>
            <Style
                x:Key="SetAutoButton"
                BasedOn="{StaticResource MetroButton}"
                TargetType="Button">
                <Setter Property="Width" Value="82" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="IsEnabled" Value="False" />
                <Setter Property="Visibility" Value="Collapsed" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock Style="{StaticResource TextStyle}" Text="Current brightness :" />
            <TextBlock
                x:Name="CurrentBrightness"
                Style="{StaticResource BrightnessTextStyle}"
                Text="-" />
            <Button
                x:Name="ButtonGet"
                Click="GetBrightness_Click"
                Content="Get"
                Style="{StaticResource GetButton}" />
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10,0,10,10">
            <TextBlock Style="{StaticResource TextStyle}" Text="Set brightness :" />
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="ButtonLevel0"
                    Click="SetBrightness_Click"
                    Content="0"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel1"
                    Click="SetBrightness_Click"
                    Content="1"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel2"
                    Click="SetBrightness_Click"
                    Content="2"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel3"
                    Click="SetBrightness_Click"
                    Content="3"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel4"
                    Click="SetBrightness_Click"
                    Content="4"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel5"
                    Click="SetBrightness_Click"
                    Content="5"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel6"
                    Click="SetBrightness_Click"
                    Content="6"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel7"
                    Click="SetBrightness_Click"
                    Content="7"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel8"
                    Click="SetBrightness_Click"
                    Content="8"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel9"
                    Click="SetBrightness_Click"
                    Content="9"
                    Style="{StaticResource SetButton}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="ButtonLevel10"
                    Click="SetBrightness_Click"
                    Content="10"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel11"
                    Click="SetBrightness_Click"
                    Content="11"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel12"
                    Click="SetBrightness_Click"
                    Content="12"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel13"
                    Click="SetBrightness_Click"
                    Content="13"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel14"
                    Click="SetBrightness_Click"
                    Content="14"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel15"
                    Click="SetBrightness_Click"
                    Content="15"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel16"
                    Click="SetBrightness_Click"
                    Content="16"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel17"
                    Click="SetBrightness_Click"
                    Content="17"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel18"
                    Click="SetBrightness_Click"
                    Content="18"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonLevel19"
                    Click="SetBrightness_Click"
                    Content="19"
                    Style="{StaticResource SetButton}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="ButtonLevel20"
                    Click="SetBrightness_Click"
                    Content="20"
                    Style="{StaticResource SetButton}" />
                <Button
                    x:Name="ButtonAuto"
                    Click="SetBrightnessAuto_Click"
                    Content="Auto"
                    Style="{StaticResource SetAutoButton}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
